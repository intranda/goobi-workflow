<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib
    version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd">
    <namespace>http://goobi.io/util</namespace>
    <tag>
        <tag-name>icon</tag-name>
        <source>util/icon.xhtml</source>
        <attribute>
            <description>One or more HTML classes to pass through to the component</description>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>The icon to display</description>
            <name>icon</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>Whether the outline or filled variant of an icon should be used</description>
            <name>filled</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <tag-name>icon-text</tag-name>
        <source>util/icon-text.xhtml</source>
        <attribute>
            <description>One or more HTML classes to pass through to the component</description>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>HTML classes to pass through to the icon</description>
            <name>iconClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>HTML classes to pass through to the text</description>
            <name>textClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>The icon to display</description>
            <name>icon</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>The text to display</description>
            <name>text</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <tag-name>ajax-loader</tag-name>
        <source>util/ajax-loader.xhtml</source>
    </tag>
</facelet-taglib>